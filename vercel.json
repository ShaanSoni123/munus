{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://gomunus-backend.onrender.com",
    "VITE_APP_NAME": "Munus",
    "VITE_APP_DESCRIPTION": "AI-Powered Job Portal"
  }
} 